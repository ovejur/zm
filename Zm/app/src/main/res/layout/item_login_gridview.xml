<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ipos_selector_gride"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- 模拟键盘按钮，当然你可以用Button，但要注意Button和GrideView的点击响应问题 -->

    <RelativeLayout
        android:id="@+id/layout_keyboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/btn_keys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/ipos_color_13252e"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/img_password_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ipos_btn_pwd_delete"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>