<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ipos_shap_normalblue">

        <RelativeLayout
            android:id="@+id/add_book_name_re"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:visibility="visible">

            <TextView
                android:id="@+id/add_book_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="请输入小说的名字"
                android:textColor="@color/deepskyblue"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/add_book_name"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_below="@id/add_book_title1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:gravity="center"
                android:textSize="14dp"
                android:maxLength="30"
                android:text=""
                android:textCursorDrawable="@null" />

            <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_below="@id/add_book_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:background="@color/deepskyblue" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/add_book_intro_re"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:visibility="gone">
            <TextView
                android:id="@+id/add_book_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="请输入小说的简介"
                android:textColor="@color/deepskyblue"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/add_book_intro"
                android:layout_width="250dp"
                android:layout_height="220dp"
                android:layout_below="@id/add_book_title2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:gravity="center"
                android:textSize="14dp"
                android:maxLength="300"
                android:text=""
                android:textCursorDrawable="@null" />

            <View
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:layout_below="@id/add_book_intro"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:background="@color/deepskyblue" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/add_book_img_re"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:visibility="gone">
            <TextView
                android:id="@+id/add_book_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="请选择封面"
                android:textColor="@color/deepskyblue"
                android:textSize="18dp" />


        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/deepskyblue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="右滑返回"
                android:textColor="@color/deepskyblue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text=""
                android:textColor="@color/deepskyblue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="左滑继续"
                android:textColor="@color/deepskyblue" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>